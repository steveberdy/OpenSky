<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackageId>OpenSky</PackageId>
    <Version>1.0.0</Version>
    <Authors>Steve Berdy</Authors>
    <Description>A C# .NET wrapper for the OpenSky Network REST API.</Description>
    <PackageProjectUrl>https://github.com/steveberdy/OpenSky</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Icon>https://raw.githubusercontent.com/steveberdy/OpenSky/main/icon.png</Icon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>api;wrapper;rest api;opensky;opensky network;opensky api</PackageTags>
    <RepositoryUrl>https://github.com/steveberdy/OpenSky.git</RepositoryUrl>

    <PackageOutputPath>./nupkg</PackageOutputPath>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IsPackable>true</IsPackable>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\"/>
    <None Include="..\..\LICENSE" Pack="true" PackagePath="\"/>

    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="xunit" Version="2.4.1" />
  </ItemGroup>

</Project>